<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    tools:context="com.example.db.xiaoshiji.activity.DiningRoomCommentActivity">
    <LinearLayout
        android:background="@color/actionbar"
        android:layout_width="match_parent"
        android:layout_height="25dp">

    </LinearLayout>

    <include
        layout="@layout/toolbar"></include>
    <RelativeLayout
    android:layout_marginTop="16dp"
    android:layout_marginLeft="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/profile2"
        android:id="@+id/iv_diningRoomLogo"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tv_diningRoomName"
        android:textSize="32sp"
        android:text="西一食堂"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/iv_diningRoomLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_below="@+id/tv_diningRoomName"
        android:textSize="14sp"
        android:text="紫松体育馆旁"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/half_black"
        android:layout_toRightOf="@+id/iv_diningRoomLogo"
        android:id="@+id/tv_diningRoomLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <TextView
        android:layout_marginLeft="32dp"
        android:textSize="20sp"
        android:text="你的评分为:"
        android:textColor="#c1000000"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="5"
        />
    <TextView
        android:layout_marginLeft="32dp"
        android:textSize="20sp"
        android:text="你的评价为:"
        android:textColor="#c1000000"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:id="@+id/et_diningRoomComment"
            android:background="@drawable/edit"
            android:padding="8dp"
            android:gravity="left"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bt_submit"
            android:layout_marginBottom="8dp"
            />
        <Button
            android:id="@+id/bt_submit"
            android:text="提交"
            android:layout_gravity="bottom"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>
