<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.FragmentAccountInfo">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f3f3f3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    app:border_width="2dp"
                    app:border_color="#fafafa"
                    android:src="@drawable/profile2"
                    android:id="@+id/person_logo"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/content"
                    android:text="我的昵称"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="16dp"
                    android:text="迷失的吴头"/>
                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/widget_icon_write"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/content"
                    android:text="我的实名"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="16dp"
                    android:text="憨货"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/content"
                    android:text="联系方式"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="16dp"
                    android:text="18627804616"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/content"
                    android:text="荣誉记录"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="16dp"
                    android:text="被帮助过48次"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/content"
                    android:text=""
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="16dp"
                    android:text="我帮助过56人"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="96dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white_pressed"
                    android:text="退出登陆"
                    android:textSize="14sp"
                    android:background="@drawable/button0_selector"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>

            </LinearLayout>


        </LinearLayout>
        </LinearLayout>

</FrameLayout>
