<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="fragment.DiningRoomInfoFragment">



        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="192dp">
                    <ImageView
                        android:id="@+id/iv_diningImage"
                        android:background="@drawable/profile2"
                        android:layout_width="168dp"
                        android:layout_height="168dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textview_name"
                            android:layout_marginTop="16dp"
                            android:text="东一食堂"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/textview_location"
                            android:text="董斌勾搭妹子的地方"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:textColor="@color/actionbar"
                            android:textSize="24sp"
                            android:text="4.7分"
                            android:layout_marginTop="12dp"
                            android:id="@+id/textview_rank"/>
                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="我要评价"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <ImageButton
                                android:background="@drawable/widget_icon_write"
                                android:layout_marginLeft="16dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_above="@+id/bt_lookupDishes"
                android:id="@+id/diningroom_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
            <Button
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/bt_lookupDishes"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:text="查看菜品"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
