<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.db.xiaoshiji.activity.DishesDetailActivity"
    android:background="@color/actionbar_title_color">

    <LinearLayout
        android:background="@color/actionbar"
        android:layout_width="match_parent"
        android:layout_height="25dp">

    </LinearLayout>

    <include
        layout="@layout/toolbar"></include>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        >
        <android.support.v4.view.ViewPager

            android:id="@+id/dishes_viewpager"
            android:layout_width="match_parent"
            android:layout_height="210dp">

        </android.support.v4.view.ViewPager>
        <!--roboto_thin roboto_light roboto_regular roboto_medium roboto_bold roboto_black-->
       <LinearLayout
           android:layout_margin="4dp"
           android:layout_gravity="bottom|right"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <com.github.adnansm.timelytextview.TimelyView
               android:id="@+id/timelyview"
               android:layout_width="24dp"
               android:layout_height="24dp"


               />
           <TextView
               android:id="@+id/dishes_imageNumber"
               android:layout_gravity="bottom"
               android:textSize="16sp"
               android:text="/0"
               android:textColor="@android:color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>


    </android.support.v7.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dishes_name"
                android:text="西红柿炒鸡蛋"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/half_black"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_dishes_location"
                android:text="西十二"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="34dp"
                android:textColor="@color/half_black"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="24dp"
                    android:textColor="@color/material_orange_1000"
                    android:text="￥2223/份"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" /> />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:paddingRight="8dp"
                    android:id="@+id/ll_dishShare"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_gravity="center_vertical"
                        android:background="@drawable/widget_icon_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_centerVertical="true"
                    android:id="@+id/line1"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/ll_dishShare"
                    android:background="@drawable/abc_menu_hardkey_panel_mtrl_mult"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_dishLike"
                    android:layout_toLeftOf="@+id/line1"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/widget_icon_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/content"
                        android:id="@+id/tv_dishLiKeNum"
                        android:text="1433"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_centerVertical="true"
                    android:id="@+id/line2"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/ll_dishLike"
                    android:background="@color/white"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_dishComment"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/line2"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/widget_icon_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_dishCommentNum"
                        android:text="200"
                        android:textColor="@color/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:background="@color/material_orange_1000"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="12sp"
            android:text="*comment*"
            android:textColor="@color/material_orange_900"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="16dp"
            android:background="@color/material_orange_1000"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <ListView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:scrollbars="none"
        android:id="@+id/lv_dish"
        android:headerDividersEnabled="false"
        android:divider="@color/half_black"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
